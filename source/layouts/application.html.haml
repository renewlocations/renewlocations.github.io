!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= page_title(current_page.data.title)

    <!-- Fonts -->
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans'

    <!-- Styles -->
    = stylesheet_link_tag "application"

    = partial 'partials/analytics' unless current_page.data.hide_analytics

  %body{class: page_classes}
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
